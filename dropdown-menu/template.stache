<div class="dropdown-wrapper">
    <a href="#" class="btn btn-link" role="button" aria-haspopup="true" aria-expanded="false" ($click)="toggle(%event)">
      {{text}} <i class="{{iconClass}}"></i>
    </a>

    {{#if toggled}}
        <div class="dropdown-content">
            <content />
        </div>
    {{/if}}
</div>

{{#if toggled}}
    <div class="dropdown-underlay" ($click)="hideAll()"></div>
{{/if}}
